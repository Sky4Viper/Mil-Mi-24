<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>gsdi.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>drift-forward</object-name>
    <object-name>drift-back</object-name>
    <object-name>drift-left</object-name>
    <object-name>drift-right</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>drift-forward</object-name>
    <object-name>drift-back</object-name>
    <object-name>drift-left</object-name>
    <object-name>drift-right</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <!-- <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation> -->

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>drift-forward</object-name>
    <object-name>drift-back</object-name>
    <object-name>drift-left</object-name>
    <object-name>drift-right</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>

      <!-- <red>0.8</red>
      <green>0.3</green>
      <blue>0.1</blue> -->

      <red>1.0</red>
      <green>0.94</green>
      <blue>0.75</blue>

    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>off-light</object-name>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   2.0 </red>
      <green> 1.8 </green>
      <blue>  1.0 </blue>
    </emission>
        <condition>
		    <property>/controls/electric/battery-switch</property>
	    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>off-light</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
      <greater-than>
        <property>velocities/airspeed-kt</property>
        <value>60</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
      <entry><ind> -1969 </ind><dep>   40.25 </dep></entry>
      <entry><ind> -985 </ind><dep>   19.87 </dep></entry>
      <entry><ind>     0 </ind><dep>    0 </dep></entry>
      <entry><ind>  985 </ind><dep>  -19.87 </dep></entry>
      <entry><ind>  1969 </ind><dep>  -40.25 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>drift-forward</object-name>
    <object-name>drift-back</object-name>
    <object-name>drift-left</object-name>
    <object-name>drift-right</object-name>
    <condition>
      <less-than>
        <property>velocities/airspeed-kt</property>
        <value>60</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>drift-forward</object-name>
    <property>instrumentation/gsdi/drift-u-kt</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>50.0</ind><dep>0.2227</dep></entry>
    </interpolation>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>drift-back</object-name>
    <property>instrumentation/gsdi/drift-u-kt</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>-30.0</ind><dep>0.124791</dep></entry>
    </interpolation>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>drift-left</object-name>
    <property>instrumentation/gsdi/drift-v-kt</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>-30.0</ind><dep>0.124791</dep></entry>
    </interpolation>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>drift-right</object-name>
    <property>instrumentation/gsdi/drift-v-kt</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>30.0</ind><dep>0.124791</dep></entry>
    </interpolation>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
  </animation>

</PropertyList>
