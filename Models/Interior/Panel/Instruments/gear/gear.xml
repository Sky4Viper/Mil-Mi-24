<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>gear.ac</path>

  <animation>
    <object-name>gear-base</object-name>
    <object-name>gear-lever</object-name>
    <object-name>gear-switches</object-name>
    <object-name>gear-lights</object-name>
    <object-name>gear-screws</object-name>
    <object-name>gear-lights-up</object-name>
    <object-name>gear-lights-down</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>gear-base</object-name>
    <object-name>gear-lever</object-name>
    <object-name>gear-switches</object-name>
    <object-name>gear-lights</object-name>
    <object-name>gear-screws</object-name>
    <object-name>gear-lights-up</object-name>
    <object-name>gear-lights-down</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>gear-base</object-name>
    <object-name>gear-lever</object-name>
    <object-name>gear-switches</object-name>
    <!-- <object-name>gear-lights</object-name> -->
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>gear-lights-up</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <red>   1.6 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>gear-lights-down</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 1.6 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>gear-lights-down</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>1.0</value>
      </equals>
    </condition>
  </animation>

  <!--
  <animation>
    <type>select</type>
    <object-name>gear-lights-up</object-name>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>0.0</value>
      </equals>
    </condition>
  </animation>
  -->

  <animation>
    <type>select</type>
    <object-name>gear-lights-up</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
      <greater-than>
        <property>gear/gear[0]/position-norm</property>
        <value>0</value>
      </greater-than>
      <less-than>
        <property>gear/gear[0]/position-norm</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>gear-lever</object-name>
    <property>controls/gear/gear-down</property>
    <interpolation>
      <entry><ind> 0 </ind><dep> -26 </dep></entry>
      <entry><ind> 1 </ind><dep>  26 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.029967 </x-m>
      <y-m>  0.059089 </y-m>
      <z-m> -0.012906 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
