<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>driftangle.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>PNP.CN4</object-name>
    <object-name>PNP.CN5</object-name>
    <object-name>PNP.CN6</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>PNP.CN4</object-name>
    <object-name>PNP.CN5</object-name>
    <object-name>PNP.CN6</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>PNP.CN4</object-name>
    <object-name>PNP.CN5</object-name>
    <object-name>PNP.CN6</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <!-- <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue> -->

      <!-- <red>0.8</red>
      <green>0.3</green>
      <blue>0.1</blue> -->

      <red>1.0</red>
      <green>0.94</green>
      <blue>0.75</blue>

    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <condition>
      <equals>
        <property>gear/gear/wow</property>
        <value>false</value>
      </equals>
    </condition>
    <property>instrumentation/gsdi/drift-angle-deg</property>
    <interpolation>
      <entry><ind> 46 </ind><dep>-128 </dep></entry>
      <entry><ind> 0 </ind><dep> 0 </dep></entry>
      <entry><ind> -46 </ind><dep> 128 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>PNP.CN6</object-name>
    <property>instrumentation/gsdi/drift-speed-kt</property>
    <factor>0.1</factor>
    <axis>
      <x> 0</x>
      <y>-1</y>
      <z> 0</z>
    </axis>
    <condition>
      <equals>
        <property>gear/gear/wow</property>
        <value>false</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>PNP.CN5</object-name>
    <property>instrumentation/gsdi/drift-speed-kt</property>
    <factor>0.01</factor>
    <step>10</step>
    <scroll>0.5</scroll>
    <axis>
      <x> 0</x>
      <y>-1</y>
      <z> 0</z>
    </axis>
    <condition>
      <equals>
        <property>gear/gear/wow</property>
        <value>false</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>PNP.CN4</object-name>
    <property>instrumentation/gsdi/drift-speed-kt</property>
    <factor>0.001</factor>
    <step>100</step>
    <scroll>0.5</scroll>
    <axis>
      <x> 0</x>
      <y>-1</y>
      <z> 0</z>
    </axis>
    <condition>
      <equals>
        <property>gear/gear/wow</property>
        <value>false</value>
      </equals>
    </condition>
  </animation>

</PropertyList>
