<PropertyList>

    <path>gunsight.ac</path>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>Glass</object-name>
    </effect>

    <animation>
		<type>noshadow</type>
		    <object-name>Sight</object-name>
            <object-name>Glass</object-name>
	  </animation>
    
    <!-- <animation>
        <type>material</type>
        <object-name>Sight</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
        </emission>
    </animation> -->

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <condition>
            <property>/sim/rendering/rembrandt/enabled</property>
        </condition>
        <object-name>Sight</object-name>
        <object-name>Glass</object-name>
    </effect>

    <animation>
    <type>select</type>
    <object-name>Sight</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
      <equals>
        <property>sim/current-view/internal</property>
        <value>true</value>     
      </equals>
    </condition>
    </animation>

    <animation>
    <type>material</type>
    <object-name>Glass</object-name>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
        <red>0.05</red>
        <green>0.01</green>
      	<blue>0.01</blue>
    </emission>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-green.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>0</red>
            <green>1.2</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-red.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>1.2</red>
            <green>0</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-yellow.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>1.2</red>
            <green>0.973</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-purple.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>0.8</red>
            <green>0.3</green>
            <blue>1.2</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>wpn-light.001</object-name>
        <object-name>wpn-light.002</object-name>
        <object-name>wpn-light.003</object-name>
        <object-name>wpn-light.004</object-name>
        <object-name>wpn-light.005</object-name>
        <object-name>wpn-light.006</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>0.4</red>
            <green>0.3</green>
            <blue>0.1</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
    <type>material</type>
    <object-name>Sight</object-name>
    <emission>
        <red>1</red>
        <green>0.7</green>
        <blue>0.5</blue>
        <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      </emission>
      <ambient>
        <red>1</red>
        <green>0.7</green>
        <blue>0.5</blue>
      </ambient>
      <diffuse>
        <red>1</red>
        <green>0.7</green>
        <blue>0.5</blue>
      </diffuse>
      <condition>
      <property>controls/electric/battery-switch</property>
      <equals>
        <property>sim/current-view/internal</property>
        <value>true</value>     
      </equals>
    </condition>
    </animation>

    <animation>
    <type>texmultiple</type>
    <object-name>Sight</object-name>
    <transform>
      <property>/accelerations/pilot/z-accel-fps_sec</property>
      <subtype>textranslate</subtype>
      <factor>0.0022</factor>
      <axis>
        <x>0</x>
        <y>-1</y>
        <z>0</z>
      </axis>
    </transform>
    <transform>
      <property>/controls/armament/pipperoffset</property>
      <subtype>textranslate</subtype>
      <factor>-15.0</factor>
      <min>-7</min>
      <max>7</max>
      <axis>
        <x>0</x>
        <y>-1</y>
        <z>0</z>
      </axis>
    </transform>
    <transform>
      <property>instrumentation/turn-indicator/indicated-turn-rate</property>
      <subtype>textranslate</subtype>
      <factor>0.05</factor>
      <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </transform>
    <transform>
      <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
      <subtype>textranslate</subtype>
      <factor>0.06</factor>
      <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </transform>
    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-green.on</object-name>
      <condition>
        <property>/controls/armament/master-arm</property>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-red.on</object-name>
      <condition>
        <equals>
        <property>/controls/armament/master-arm</property>
          <value>0</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-yellow.on</object-name>
      <condition>
        <property>/controls/armament/LAMarkerON</property>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-purple.on</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>2</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.001</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>4</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.002</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>5</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.003</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>1</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.004</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>3</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.005</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>1</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.006</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>2</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

</PropertyList>
