    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <condition>
            <property>/sim/rendering/rembrandt/enabled</property>
        </condition>
        <object-name>Sight-Fixed</object-name>
        <object-name>Sight-Auto</object-name>
        <object-name>Glass</object-name>
    </effect>

    <animation>
    <type>select</type>
    <object-name>Sight-Fixed</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
      <not><property>controls/electric/gunsight-auto</property></not>
      <equals>
        <property>sim/current-view/internal</property>
        <value>true</value>     
      </equals>
    </condition>
    </animation>

    <animation>
    <type>select</type>
    <object-name>Sight-Auto</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
      <property>controls/electric/gunsight-auto</property>
      <equals>
        <property>sim/current-view/internal</property>
        <value>true</value>     
      </equals>
    </condition>
    </animation>

    <animation>
      <type>material</type>
      <object-name>gunsight-base-bg</object-name>
      <object-name>index.001</object-name>
      <object-name>index.002</object-name>
      <emission>
        <red>0.6</red>
        <green>0.6</green>
        <blue>0.6</blue>
        <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>material</type>
      <object-name>switch-base</object-name>
      <emission>
        <red>0.2</red>
        <green>0.2</green>
        <blue>0.2</blue>
        <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
    <type>material</type>
    <object-name>Glass</object-name>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
        <red>0.05</red>
        <green>0.01</green>
      	<blue>0.01</blue>
    </emission>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-green.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>0</red>
            <green>1.2</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-red.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>1.2</red>
            <green>0</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-yellow.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>1.2</red>
            <green>0.973</green>
            <blue>0</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>lamp-purple.on</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <red>0.8</red>
            <green>0.3</green>
            <blue>1.2</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>wpn-light.001</object-name>
        <object-name>wpn-light.002</object-name>
        <object-name>wpn-light.003</object-name>
        <object-name>wpn-light.004</object-name>
        <object-name>wpn-light.005</object-name>
        <object-name>wpn-light.006</object-name>
        <emission> 
            <factor-prop>controls/lighting/luminosite-lights</factor-prop>
            <!-- <red>0.4</red>
            <green>0.3</green>
            <blue>0.1</blue> -->
            <red>2.0</red>
            <green>1.94</green>
            <blue>1.75</blue>
        </emission>
      <condition>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
    <type>material</type>
    <object-name>Sight-Fixed</object-name>
    <object-name>Sight-Auto</object-name>
    <emission>
        <red>1</red>
        <green>0.7</green>
        <blue>0.5</blue>
        <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      </emission>
      <ambient>
        <red>1</red>
        <green>0.7</green>
        <blue>0.5</blue>
      </ambient>
      <diffuse>
        <red>1</red>
        <green>0.7</green>
        <blue>0.5</blue>
      </diffuse>
      <condition>
      <property>controls/electric/battery-switch</property>
      <equals>
        <property>sim/current-view/internal</property>
        <value>true</value>     
      </equals>
    </condition>
    </animation>

    <animation>
    <type>texmultiple</type>
    <object-name>Sight-Fixed</object-name>
    <transform>
      <property>/accelerations/pilot/z-accel-fps_sec</property>
      <subtype>textranslate</subtype>
      <factor>0.0022</factor>
      <axis>
        <x>0</x>
        <y>-1</y>
        <z>0</z>
      </axis>
    </transform>
    <!-- <transform>
      <property>/controls/armament/pipperoffset</property>
      <subtype>textranslate</subtype>
      <factor>-15.0</factor>
      <min>-7</min>
      <max>7</max>
      <axis>
        <x>0</x>
        <y>-1</y>
        <z>0</z>
      </axis>
    </transform> -->

    <transform>
      <property>instrumentation/turn-indicator/indicated-turn-rate</property>
      <subtype>textranslate</subtype>
      <interpolation>
       <entry><ind> -10.0 </ind><dep>-0.5 </dep></entry>
       <entry><ind>  0.0 </ind><dep> 0.0 </dep></entry>
       <entry><ind> 10.0 </ind><dep> 0.5 </dep></entry>
      </interpolation>
      <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </transform>
    <transform>
      <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
      <subtype>textranslate</subtype>
      <interpolation>
       <entry><ind> -10.0 </ind><dep>-0.5 </dep></entry>
       <entry><ind>  0.0 </ind><dep> 0.0 </dep></entry>
       <entry><ind> 10.0 </ind><dep> 0.5 </dep></entry>
      </interpolation>
      <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </transform>
    </animation>

<!-- AUTOMATIC SIGHT -->

    <animation>
    <type>texmultiple</type>
    <object-name>Sight-Auto</object-name>

    <!-- <transform>
      <property>/accelerations/pilot/z-accel-fps_sec</property>
      <subtype>textranslate</subtype>
      <factor>0.0022</factor>
      <axis>
        <x>0</x>
        <y>-1</y>
        <z>0</z>
      </axis>
    </transform> -->

    <transform>
      <!-- <property>/controls/armament/ataka_heading_offset</property> -->
      <property>/controls/armament/pipper_offset_h</property>
      <subtype>textranslate</subtype>
      <interpolation>
       <entry><ind>-6 </ind><dep>-0.375 </dep></entry>
       <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
       <entry><ind> 6 </ind><dep> 0.375 </dep></entry>
      </interpolation>
      <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
      <condition>
        <or>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>1</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>3</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>4</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>5</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>6</value>
         </equals>
        </or>
      </condition>
    </transform>

    <transform>
      <!-- <property>/controls/armament/ataka_pitch_offset</property> -->
      <property>/controls/armament/pipper_offset_v</property>
      <subtype>textranslate</subtype>
      <interpolation>
       <entry><ind> -1000.0 </ind><dep>0.59 </dep></entry>
       <entry><ind> 0 </ind><dep> 0.0 </dep></entry>
       <entry><ind> 170 </ind><dep> -0.17 </dep></entry>
      </interpolation>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
      <condition>
        <or>
        <equals>
             <property>controls/armament/weapon-type</property>
             <value>1</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>2</value>
         </equals>
        </or>
      </condition>
    </transform>

    <transform>
      <!-- <property>/controls/armament/ataka_pitch_offset</property> -->
      <property>/controls/armament/pipper_offset_v</property>
      <subtype>textranslate</subtype>
      <interpolation>
       <entry><ind> -11.5 </ind><dep>0.678 </dep></entry>
       <entry><ind>   0 </ind><dep> 0.0 </dep></entry>
       <entry><ind> 2.175 </ind><dep> -0.134 </dep></entry>
      </interpolation>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
      <condition>
        <or>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>3</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>4</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>5</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>6</value>
         </equals>
        </or>
      </condition>
    </transform>

    <transform>
      <property>instrumentation/turn-indicator/indicated-turn-rate</property>
      <subtype>textranslate</subtype>
      <!-- <factor>0.05</factor> -->
      <interpolation>
       <entry><ind> -10.0 </ind><dep>-0.5 </dep></entry>
       <entry><ind>  0.0 </ind><dep> 0.0 </dep></entry>
       <entry><ind> 10.0 </ind><dep> 0.5 </dep></entry>
      </interpolation>
      <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
      </axis>
      <condition>
        <or>
        <equals>
             <property>controls/armament/weapon-type</property>
             <value>1</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>2</value>
         </equals>
        </or>
      </condition>
    </transform>

    <transform>
      <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
      <subtype>textranslate</subtype>
      <!-- <factor>0.06</factor> -->
      <interpolation>
       <entry><ind> -10.0 </ind><dep>-0.5 </dep></entry>
       <entry><ind>  0.0 </ind><dep> 0.0 </dep></entry>
       <entry><ind> 10.0 </ind><dep> 0.5 </dep></entry>
      </interpolation>
      <axis>
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
      <condition>
        <or>
        <equals>
             <property>controls/armament/weapon-type</property>
             <value>1</value>
         </equals>
         <equals>
             <property>controls/armament/weapon-type</property>
             <value>2</value>
         </equals>
        </or>
      </condition>
    </transform>

    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-green.on</object-name>
      <condition>
        <property>/controls/armament/master-arm</property>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-red.on</object-name>
      <condition>
        <equals>
        <property>/controls/armament/master-arm</property>
          <value>0</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-yellow.on</object-name>
      <condition>
        <property>controls/electric/gunsight-auto</property>
        <property>controls/electric/battery-switch</property>
        <or>
         <property>/controls/armament/LAMarkerON</property>
         <property>/controls/armament/ataka-inrange</property>
        </or>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>lamp-purple.on</object-name>
      <condition>
        <greater-than>
         <property>/controls/armament/weapon-type</property>
         <value>2</value>
        </greater-than>
        <less-than>
         <property>/controls/armament/weapon-type</property>
         <value>7</value>
        </less-than>
        <property>/tracking/tgt-designated</property>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.001</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>8</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.002</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>9</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.003</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>1</value>
        </equals>
        <equals>
				  <property>/sim/variant-id</property>
				  <value>1</value>
			  </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.004</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>7</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.005</object-name>
      <condition>
        <equals>
          <property>/controls/armament/weapon-type</property>
          <value>1</value>
        </equals>
        <equals>
				  <property>/sim/variant-id</property>
				  <value>2</value>
			  </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>wpn-light.006</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>2</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>rotate</type>
      <object-name>switch.001</object-name>
      <property>controls/electric/gunsight-sync</property>
      <offset-deg>20</offset-deg>
      <factor>-40</factor>
      <center>
        <x-m>0.001065</x-m>
        <y-m>-0.096258</y-m>
        <z-m>-0.051284</z-m>
      </center>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
    </animation>

    <animation>
      <type>rotate</type>
      <object-name>switch.002</object-name>
      <property>controls/electric/gunsight-auto</property>
      <offset-deg>20</offset-deg>
      <factor>-40</factor>
      <center>
        <x-m>0.001065</x-m>
        <y-m>-0.096258</y-m>
        <z-m>-0.073672</z-m>
      </center>
      <axis>
        <x>0</x>
        <y>1</y>
        <z>0</z>
      </axis>
    </animation>

    <animation>
     <type>rotate</type>
     <object-name>knob.003</object-name>
     <property>/controls/armament/ataka-index</property>
     <center>
      <x-m> 0.010957 </x-m>
      <y-m>-0.050462 </y-m>
      <z-m>-0.033126 </z-m>
     </center>
     <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
     </axis>
    </animation>

    <animation>
     <type>textranslate</type>
     <object-name>index.001</object-name>
     <property>/controls/armament/ataka-index</property>
     <factor>0.0474</factor>
     <offset>0</offset>
     <axis>
      <x> 0</x>
      <y> 1</y>
      <z> 0</z>
     </axis>
    </animation>

    <animation>
     <type>textranslate</type>
     <object-name>index.002</object-name>
     <property>/controls/armament/ataka-index</property>
     <factor>0.474</factor>
     <offset>0</offset>
     <axis>
      <x> 0</x>
      <y> 1</y>
      <z> 0</z>
     </axis>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>switch.001</object-name>
      <action>
        <button>0</button>
        <button>1</button>
        <repeatable>false</repeatable>
        <interval-sec>0.1</interval-sec>
        <binding>
          <command>property-assign</command>
          <property>sim/model/turret[0]/heading</property>
          <value>0.1</value>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>sim/model/turret[0]/pitch</property>
          <value>1</value>
        </binding>
      </action>
      <hovered>
       <binding>
        <command>set-tooltip</command>
         <tooltip-id>turret-reset</tooltip-id>
         <label>Reset Turret Rotation Angle</label>
       </binding>
      </hovered>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>switch.002</object-name>
      <action>
        <button>0</button>
        <button>1</button>
        <repeatable>false</repeatable>
        <interval-sec>0.1</interval-sec>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/gunsight-auto</property>
        </binding>
      </action>
      <hovered>
       <binding>
        <command>set-tooltip</command>
         <tooltip-id>sight-auto</tooltip-id>
         <label>Sight Auto Mode Toggle</label>
       </binding>
      </hovered>
    </animation>

    <animation>
    <type>knob</type>
    <object-name>knob.003</object-name>
    <increase>
      <binding>
        <command>property-adjust</command>
        <property>/controls/armament/ataka-index</property>
        <step>0.05</step>
        <min>-0.9</min>
        <max>0.9</max>
        <wrap>false</wrap>
      </binding>
    </increase>
    <decrease>
      <binding>
        <command>property-adjust</command>
        <property>/controls/armament/ataka-index</property>
        <step>-0.05</step>
        <min>-0.9</min>
        <max>0.9</max>
        <wrap>false</wrap>
      </binding>
    </decrease>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>mis-index-adj</tooltip-id>
        <label>Set ATAKA offset %1.2f</label>
        <property>/controls/armament/ataka-index</property>
      </binding>
    </hovered>
  </animation>

</PropertyList>
