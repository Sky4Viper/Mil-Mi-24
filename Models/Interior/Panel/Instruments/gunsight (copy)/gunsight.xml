<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>asp-17vp.ac</path>

  <animation>
    <type>noshadow</type>
    <object-name>gunsight-base</object-name>
    <object-name>gunsight-base-bg</object-name>
    <object-name>knobs</object-name>
    <object-name>knob1</object-name>
    <object-name>knob2</object-name>
    <object-name>knob3</object-name>
    <object-name>switch-base</object-name>
    <object-name>switch1</object-name>
    <object-name>switch2</object-name>
    <object-name>switch3</object-name>
    <object-name>lamp-green</object-name>
    <object-name>lamp-green-on</object-name>
    <object-name>lamp-red</object-name>
    <object-name>lamp-red-on</object-name>
    <object-name>lamp-yellow</object-name>
    <object-name>lamp-yellow-on</object-name>
    <object-name>lamp-purple</object-name>
    <object-name>lamp-purple-on</object-name>
    <object-name>wpn-light.001</object-name>
    <object-name>wpn-light.002</object-name>
    <object-name>wpn-light.003</object-name>
    <object-name>wpn-light.004</object-name>
    <object-name>wpn-light.005</object-name>
    <object-name>wpn-light.006</object-name>

    <object-name>Glass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>lamp-green</object-name>
    <object-name>lamp-green-on</object-name>
    <object-name>lamp-red</object-name>
    <object-name>lamp-red-on</object-name>
    <object-name>lamp-yellow</object-name>
    <object-name>lamp-yellow-on</object-name>
    <object-name>lamp-purple</object-name>
    <object-name>lamp-purple-on</object-name>
    <object-name>wpn-light.001</object-name>
    <object-name>wpn-light.002</object-name>
    <object-name>wpn-light.003</object-name>
    <object-name>wpn-light.004</object-name>
    <object-name>wpn-light.005</object-name>
    <object-name>wpn-light.006</object-name>
    <object-name>Glass</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>Glass</object-name>
  </effect>

  <!-- Light section -->
  <animation>
    <type>material</type>
    <object-name>switch-base</object-name>
    <object-name>gunsight-base-bg</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lamp-green.on</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 1.2 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lamp-red.on</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <red>   1.2 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lamp-yellow.on</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <red>   1.200 </red>
      <green> 0.973 </green>
      <blue>  0.000 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lamp-purple.on</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <red>   0.8 </red>
      <green> 0.3 </green>
      <blue>  1.2 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>wpn-light.001</object-name>
    <object-name>wpn-light.002</object-name>
    <object-name>wpn-light.003</object-name>
    <object-name>wpn-light.004</object-name>
    <object-name>wpn-light.005</object-name>
    <object-name>wpn-light.006</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <!-- **************************** -->
  <model>
    <path>Optique/optique.xml</path>
    <offsets>
      <x-m> -0.08770 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.02352 </z-m>
      <pitch-deg> 20.44 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <type>select</type>
    <object-name>lamp-green.on</object-name>
    <condition>
      <property>/controls/armament/master-arm</property>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>lamp-red.on</object-name>
    <condition>
      <equals>
        <property>/controls/armament/master-arm</property>
        <value>0</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>lamp-yellow.on</object-name>
    <condition>
      <property>/controls/armament/LAMarkerON</property>
      <property>controls/electric/gunsight-auto</property>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>lamp-purple.on</object-name>
    <condition>
      <equals>
        <property>/controls/armament/weapon-type</property>
        <value>3</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>wpn-light.001</object-name>
    <condition>
      <equals>
        <property>/controls/armament/weapon-type</property>
        <value>4</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>wpn-light.002</object-name>
    <condition>
      <equals>
        <property>/controls/armament/weapon-type</property>
        <value>5</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>wpn-light.003</object-name>
    <condition>
      <equals>
        <property>/controls/armament/weapon-type</property>
        <value>1</value>
      </equals>
      <equals>
        <property>/sim/variant-id</property>
        <value>1</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>wpn-light.004</object-name>
    <condition>
      <equals>
        <property>/controls/armament/weapon-type</property>
        <value>3</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>wpn-light.005</object-name>
    <condition>
      <equals>
        <property>/controls/armament/weapon-type</property>
        <value>1</value>
      </equals>
      <equals>
        <property>/sim/variant-id</property>
        <value>2</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>wpn-light.006</object-name>
    <condition>
      <equals>
        <property>/controls/armament/weapon-type</property>
        <value>2</value>
      </equals>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>switch1</object-name>
    <property>controls/electric/gunsight-sync</property>
    <offset-deg> 20 </offset-deg>
    <factor> -40 </factor>
    <center>
      <x-m>  0.001065 </x-m>
      <y-m> -0.096258 </y-m>
      <z-m> -0.051284 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>switch2</object-name>
    <property>controls/electric/gunsight-auto</property>
    <offset-deg>20</offset-deg>
    <factor>-40</factor>
    <center>
      <x-m>  0.001065 </x-m>
      <y-m> -0.096258 </y-m>
      <z-m> -0.073672 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>switch2</object-name>
    <action>
      <button>0</button>
      <button>1</button>
      <repeatable>false</repeatable>
      <interval-sec>0.1</interval-sec>
      <binding>
        <command>property-toggle</command>
        <property>controls/electric/gunsight-auto</property>
      </binding>
    </action>
  </animation>

</PropertyList>
