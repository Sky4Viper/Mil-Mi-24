<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>pkp-72m.ac</path>

  <animation>
    <object-name>pkp-bezel</object-name>
    <object-name>pkp-ball</object-name>
    <object-name>pkp-face</object-name>
    <object-name>pkp-pitch-knob</object-name>
    <object-name>pkp-test-btn</object-name>
    <object-name>pkp.skidbase</object-name>
    <object-name>pkp.skidball</object-name>
    <object-name>rollarrow</object-name>
    <object-name>wings</object-name>
    <object-name>screws</object-name>

    <object-name>pkp.altitude.director</object-name>
    <object-name>pkp.altitude.scale</object-name>
    <object-name>pkp.blenker.ag</object-name>
    <object-name>pkp.blenker.k</object-name>
    <object-name>pkp.blenker.rv</object-name>
    <object-name>pkp.blenker.t</object-name>
    <object-name>pkp.course.director</object-name>
    <object-name>pkp.course.scale</object-name>
    <object-name>pkp.pitch.knob</object-name>
    <object-name>pkp.test.btn</object-name>

    <object-name>pkp-glass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>pkp-bezel</object-name>
    <object-name>pkp-ball</object-name>
    <object-name>pkp-face</object-name>
    <object-name>pkp-pitch-knob</object-name>
    <object-name>pkp-test-btn</object-name>
    <object-name>pkp-glass</object-name>
    <object-name>pkp.skidbase</object-name>
    <object-name>pkp.skidball</object-name>
    <object-name>rollarrow</object-name>
    <object-name>wings</object-name>
    <object-name>screws</object-name>
    <object-name>pkp.altitude.director</object-name>
    <object-name>pkp.altitude.scale</object-name>
    <object-name>pkp.blenker.ag</object-name>
    <object-name>pkp.blenker.k</object-name>
    <object-name>pkp.blenker.rv</object-name>
    <object-name>pkp.blenker.t</object-name>
    <object-name>pkp.course.director</object-name>
    <object-name>pkp.course.scale</object-name>
    <object-name>pkp.pitch.knob</object-name>
    <object-name>pkp.test.btn</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>pkp-glass</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>wings</object-name>
    <object-name>pkp-face</object-name>
    <object-name>rollarrow</object-name>
    <object-name>pkp-ball</object-name>
    <object-name>pkp.skidbase</object-name>
    <object-name>pkp.skidball</object-name>
    <object-name>pkp.altitude.director</object-name>
    <object-name>pkp.altitude.scale</object-name>
    <object-name>pkp.course.director</object-name>
    <object-name>pkp.course.scale</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pkp-ball</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m> -0.005916 </x-m>
      <y-m>  0.000000 </y-m>
      <z-m>  0.008217 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pkp-ball</object-name>
    <property>orientation/pitch-deg</property>
    <center>
      <x-m> -0.005916 </x-m>
      <y-m>  0.000000 </y-m>
      <z-m>  0.008217 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pkp-ball</object-name>
    <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
    <factor>1.546875</factor>
    <center>
      <x-m> -0.005916 </x-m>
      <y-m>  0.000000 </y-m>
      <z-m>  0.008217 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pkp.pitch.knob</object-name>
    <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
    <factor>25</factor>
    <center>
      <x-m>  0.079735 </x-m>
      <y-m>  0.045474 </y-m>
      <z-m> -0.044599 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rollarrow</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m> 0.000000 </x-m>
      <y-m> 0.000000 </y-m>
      <z-m> 0.008217 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pkp.skidball</object-name>
    <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <interpolation>
      <entry><ind> -2.56 </ind><dep> -9.216 </dep></entry>
      <entry><ind>  2.56 </ind><dep>  9.216 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.009 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pkp.blenker.ag</object-name>
    <object-name>pkp.blenker.k</object-name>
    <object-name>pkp.blenker.rv</object-name>
    <object-name>pkp.blenker.t</object-name>
    <condition>
      <equals>
        <!-- <property>instrumentation/attitude-indicator/serviceable</property> -->
        <property>controls/electric/battery-switch</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>pkp.course.director</object-name>
    <property>instrumentation/nav/heading-needle-deflection</property>
    <factor> 0.0155 </factor>
    <min>   -0.0155 </min>
    <max>    0.0155 </max>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>pkp.pitch.knob</object-name>
    <increase>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
        <step>0.5</step>
        <min>0</min>
        <max>10</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("dial")</script>
      </binding>
    </increase>
    <decrease>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
        <step>-0.5</step>
        <min>0</min>
        <max>10</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("dial")</script>
      </binding>
    </decrease>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>pnp-offset</tooltip-id>
        <label>Adjust horizon offset</label>
      </binding>
    </hovered>
  </animation>

</PropertyList>
