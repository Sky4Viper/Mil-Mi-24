<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>map.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>switches</object-name>
    <object-name>canvasCadre</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>fond</object-name>
    <object-name>switches</object-name>
    <object-name>canvasCadre</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>canvasCadre</object-name>
    <condition>
      <not><property>/sim/rendering/hdr/hdr-enabled</property></not>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>canvasCadre</object-name>
    <condition>
      <not><property>/sim/rendering/hdr/hdr-enabled</property></not>
      <property>controls/electric/battery-switch</property>
    </condition>
  </animation>

</PropertyList>
