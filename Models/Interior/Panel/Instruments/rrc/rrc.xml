<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>rrc.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>course-card</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>course-knob</object-name>
    <object-name>visses</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>course-card</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>course-knob</object-name>
    <object-name>visses</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>course-card</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>course-card</object-name>
    <object-name>needle2</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <factor>1</factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle2</object-name>
    <property>autopilot/settings/heading-bug-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Needle 1 VOR
  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>orientation/heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>instrumentation/nav[1]/heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation> -->

  <!-- Needle 2 ADF -->
  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>instrumentation/adf/indicated-bearing-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>course-knob</object-name>
    <increase>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/heading-bug-deg</property>
        <step>1.0</step>
        <min>1</min>
        <max>361</max>
        <wrap>true</wrap>
      </binding>
      <!--
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("adf-dial")</script>
      </binding>
      -->
    </increase>
    <decrease>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/heading-bug-deg</property>
        <step>-1.0</step>
        <min>1</min>
        <max>361</max>
        <wrap>true</wrap>
      </binding>
      <!--
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("adf-dial")</script>
      </binding>
      -->
    </decrease>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>course-adj</tooltip-id>
        <label>Set heading %4.0f</label>
        <property>autopilot/settings/heading-bug-deg</property>
      </binding>
    </hovered>
  </animation>

</PropertyList>
