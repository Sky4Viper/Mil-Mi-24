<!-- Radio altimeter 3D instrument for Tu-154 -->
<PropertyList>

  <path>rv-5m.ac</path>

  <animation>
    <object-name>glass</object-name>
    <object-name>face</object-name>
    <object-name>centre</object-name>
    <object-name>screws</object-name>

    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>glass</object-name>
    <object-name>face</object-name>
    <object-name>centre</object-name>
    <object-name>screws</object-name>
    <object-name>glass</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>glass</object-name>
  </effect>

  <!-- Internal instruments lighting -->
  <animation>
    <type>material</type>
    <object-name>needle</object-name>
    <object-name>index</object-name>
    <object-name>index_light</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lamp_light</object-name>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   2.0 </red>
      <green> 1.8 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>centre</object-name>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   1.00 </red>
      <green> 0.94 </green>
      <blue>  0.75 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>lamp_light</object-name>
    <condition>
      <property>/controls/electric/ralt-switch</property>
      <less-than>
        <property>/position/altitude-agl-ft</property>
        <property>controls/instrumentation/danger-altitude-ft</property>
      </less-than>
      <less-than>
        <property>/gear/gear[0]/position-norm</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>index_light</object-name>
    <condition>
      <or>
        <greater-than>
          <property>/position/altitude-agl-ft</property>
          <value>2625</value>
        </greater-than>
        <not>
          <property>/controls/electric/ralt-switch</property>
        </not>
      </or>
    </condition>
  </animation>

  <!--Needles-->
  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <condition>
      <property>/controls/electric/ralt-switch</property>
    </condition>
    <expression>
      <table>
        <product>
          <sum>
            <property>/position/altitude-agl-ft</property>
            <value>-3</value>
          </sum>
          <value>0.3048</value>
        </product>
        <entry><ind>   0 </ind>	<dep>   0.0 </dep></entry>
        <entry><ind>  50 </ind>	<dep>  75.0 </dep></entry>
        <entry><ind>  60 </ind>	<dep>  91.5 </dep></entry>
        <entry><ind>  80 </ind>	<dep> 123.0 </dep></entry>
        <entry><ind> 100 </ind>	<dep> 155.0 </dep></entry>
        <entry><ind> 200 </ind>	<dep> 179.0 </dep></entry>
        <entry><ind> 300 </ind>	<dep> 203.0 </dep></entry>
        <entry><ind> 400 </ind>	<dep> 226.0 </dep></entry>
        <entry><ind> 500 </ind>	<dep> 251.0 </dep></entry>
        <entry><ind> 700 </ind>	<dep> 300.0 </dep></entry>
        <entry><ind> 800 </ind>	<dep> 325.0 </dep></entry>
      </table>
    </expression>
    <axis>
      <x> -1</x>
      <y>  0</y>
      <z>  0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>index</object-name>
    <property>controls/instrumentation/danger-altitude-ft</property>
    <interpolation>
      <entry><ind>    0.00 </ind><dep>   0 </dep></entry>
      <entry><ind>  328.10 </ind><dep> 155 </dep></entry> <!-- 100 m -->
      <entry><ind>  656.20 </ind><dep> 180 </dep></entry> <!-- 200 m -->
      <entry><ind> 2296.70 </ind><dep> 300 </dep></entry> <!-- 700 m -->
      <entry><ind> 2460.75 </ind><dep> 312 </dep></entry> <!-- 750 m -->
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>knob_alt</object-name>
    <property>controls/instrumentation/danger-altitude-ft</property>
    <center>
      <x-m>  0.000000 </x-m>
      <y-m> -0.039545 </y-m>
      <z-m> -0.045365 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>knob_alt</object-name>
    <increase>
      <binding>
        <command>property-adjust</command>
        <property>controls/instrumentation/danger-altitude-ft</property>
        <step>32.81</step>
        <min>0</min>
        <max>2460.75</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("dial")</script>
      </binding>
    </increase>
    <decrease>
      <binding>
        <command>property-adjust</command>
        <property>controls/instrumentation/danger-altitude-ft</property>
        <step>-32.81</step>
        <min>0</min>
        <max>2460.75</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("dial")</script>
      </binding>
    </decrease>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>rv-5m-dh</tooltip-id>
        <label>Adjust danger altitude warning</label>
      </binding>
    </hovered>
  </animation>

</PropertyList>
