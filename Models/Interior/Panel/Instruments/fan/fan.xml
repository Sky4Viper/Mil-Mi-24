<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>fan.ac</path>

  <animation>
    <object-name>fan-unit</object-name>
    <object-name>fan-propeller</object-name>
    <object-name>fan-blur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>fan-unit</object-name>
    <object-name>fan-propeller</object-name>
    <object-name>fan-blur</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>fan-blur</object-name>
  </effect>

  <animation>
    <type>rotate</type>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <object-name>fan-propeller</object-name>
    <property>rotors/tail/blade[0]/position-deg</property>
    <axis>
      <x> -1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
