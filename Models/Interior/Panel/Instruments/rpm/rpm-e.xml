<?xml version="1.0"?>

<PropertyList>

  <path>rpm-e.ac</path>

  <animation>
    <object-name>bazel</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>needle4</object-name>

    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>bazel</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>needle4</object-name>

    <object-name>glass</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>glass</object-name>
  </effect>

  <animation>
  <type>material</type>
  <object-name>needle1</object-name>
  <object-name>needle2</object-name>
  <object-name>needle3</object-name>
  <object-name>needle4</object-name>
  <object-name>face</object-name>
  <condition>
    <property>controls/electric/battery-switch</property>
  </condition>
  <emission>
    <factor-prop>controls/lighting/instruments-norm</factor-prop>
    <red>   0.50 </red>
    <green> 0.40 </green>
    <blue>  0.30 </blue>
  </emission>
</animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>sim/model/mi24/engine</property>
    <interpolation>
      <entry><ind>  0.00 </ind><dep>  60 </dep></entry>
      <entry><ind>  0.10 </ind><dep>  90 </dep></entry>
      <entry><ind>  0.40 </ind><dep>  180 </dep></entry>
      <entry><ind>  0.70 </ind><dep>  270 </dep></entry>
      <entry><ind>  1.00 </ind><dep>  360 </dep></entry>
      <entry><ind>  1.03 </ind><dep>  361 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle2</object-name>
    <!-- <property>/engines/engine[1]/rpm</property> -->
    <!-- <property>controls/engines/engine[0]/throttle</property> -->
    <property>sim/model/mi24/engine</property>
    <interpolation>
      <entry><ind>  0.00 </ind><dep>  60 </dep></entry>
      <entry><ind>  0.10 </ind><dep>  90 </dep></entry>
      <entry><ind>  0.40 </ind><dep>  180 </dep></entry>
      <entry><ind>  0.70 </ind><dep>  270 </dep></entry>
      <entry><ind>  1.00 </ind><dep>  360 </dep></entry>
      <entry><ind>  1.03 </ind><dep>  361 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
