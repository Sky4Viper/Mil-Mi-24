<?xml version="1.0"?>

<PropertyList>

  <path>rpm-e.ac</path>

  <animation>
    <object-name>bazel</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>needle4</object-name>

    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>bazel</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>needle4</object-name>

    <object-name>glass</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>glass</object-name>
  </effect>

  <animation>
  <type>material</type>
  <object-name>needle1</object-name>
  <object-name>needle2</object-name>
  <object-name>needle3</object-name>
  <object-name>needle4</object-name>
  <object-name>face</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <!-- <red>1.0</red>
      <green>0.94</green>
      <blue>0.74</blue> -->

      <!-- <red>0.8</red>
      <green>0.3</green>
      <blue>0.1</blue> -->

      <red>1.0</red>
      <green>0.94</green>
      <blue>0.75</blue>

    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <!-- <property>/engines/engine[0]/rpm</property> -->
    <property>controls/engines/engine[0]/throttle</property>
    <interpolation>
      <entry><ind>  1.0 </ind><dep>  60.0 </dep></entry>
      <entry><ind> 0.80 </ind><dep> 105.0 </dep></entry>
      <entry><ind> 0.60 </ind><dep> 167.0 </dep></entry>
      <entry><ind> 0.40 </ind><dep> 228.0 </dep></entry>
      <entry><ind> 0.20 </ind><dep> 289.0 </dep></entry>
      <entry><ind> 0.00 </ind><dep> 360.0 </dep></entry>
      <entry><ind> -0.07 </ind><dep> 381.0 </dep></entry>
    </interpolation>
    <axis>
      <x> -1.0 </x>
      <y>  0.0 </y>
      <z>  0.0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle2</object-name>
    <!-- <property>/engines/engine[1]/rpm</property> -->
    <property>controls/engines/engine[0]/throttle</property>
    <interpolation>
      <entry><ind>  1.0 </ind><dep>  60.0 </dep></entry>
      <entry><ind> 0.80 </ind><dep> 105.0 </dep></entry>
      <entry><ind> 0.60 </ind><dep> 167.0 </dep></entry>
      <entry><ind> 0.40 </ind><dep> 228.0 </dep></entry>
      <entry><ind> 0.20 </ind><dep> 289.0 </dep></entry>
      <entry><ind> 0.00 </ind><dep> 360.0 </dep></entry>
      <entry><ind> -0.07 </ind><dep> 381.0 </dep></entry>
    </interpolation>
    <axis>
      <x> -1.0 </x>
      <y>  0.0 </y>
      <z>  0.0 </z>
    </axis>
  </animation>

</PropertyList>


