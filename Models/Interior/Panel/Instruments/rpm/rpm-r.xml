  <animation>
    <object-name>bazel</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>needle4</object-name>

    <object-name>glass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>bazel</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>needle4</object-name>

    <object-name>glass</object-name>
  </animation>

    <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>glass</object-name>
  </effect>

  <animation>
  <type>material</type>
  <object-name>needle1</object-name>
  <object-name>needle2</object-name>
  <object-name>needle3</object-name>
  <object-name>needle4</object-name>
  <object-name>face</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <!-- <red>1.0</red>
      <green>0.94</green>
      <blue>0.74</blue> -->

      <!-- <red>0.8</red>
      <green>0.3</green>
      <blue>0.1</blue> -->

      <red>1.0</red>
      <green>0.94</green>
      <blue>0.75</blue>

    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>rotors/main/rpm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   60 </dep></entry>
      <entry><ind> 500 </ind><dep> 360 </dep></entry>
      <entry><ind> 700 </ind><dep> 381 </dep></entry>
    </interpolation>
    <axis>
      <x> -1.0 </x>
      <y>  0.0 </y>
      <z>  0.0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle2</object-name>
    <property>/rotors/tail/rpm</property>
    <interpolation>
      <entry><ind>    0 </ind><dep> 60 </dep></entry>
      <entry><ind> 1500 </ind><dep> 330 </dep></entry>
      <entry><ind> 2500 </ind><dep> 381 </dep></entry>
    </interpolation>
    <axis>
      <x> -1.0 </x>
      <y>  0.0 </y>
      <z>  0.0 </z>
    </axis>
  </animation>

</PropertyList>


