  <animation>
      <type>select</type>
      <object-name>cpg-light.005</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>8</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
