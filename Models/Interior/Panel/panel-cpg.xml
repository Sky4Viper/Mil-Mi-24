      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>cpg-light.009</object-name>
      <condition>
        <equals>
          <property>/controls/armament/weapon-type</property>
          <value>1</value>
        </equals>
        <equals>
				  <property>/sim/variant-id</property>
				  <value>2</value>
			  </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>cpg-light.010</object-name>
      <condition>
        <equals>
        <property>/controls/armament/weapon-type</property>
        <value>2</value>
        </equals>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>cpg-light.002</object-name>
      <condition>
        <greater-than>
         <property>/controls/armament/weapon-type</property>
         <value>2</value>
        </greater-than>
        <less-than>
         <property>/controls/armament/weapon-type</property>
         <value>7</value>
        </less-than>
        <property>/tracking/tgt-designated</property>
        <property>controls/electric/battery-switch</property>
      </condition>
    </animation>

