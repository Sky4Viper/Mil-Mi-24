<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>9M120.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>tube-outer</object-name>
    <object-name>tube-inner</object-name>
    <object-name>caps</object-name>
    <object-name>9M120-missile</object-name>

    <!-- Transparence -->
  </animation>

  <effect>
    <inherits-from>Aircraft/Mil-Mi-24/Models/Effects/Weapons/3D/ArmReflect</inherits-from>
    <object-name>tube-outer</object-name>
  </effect>

  <animation>
		<type>select</type>
		<object-name>caps</object-name>
    <object-name>9M120-missile</object-name>
		<condition>
			<equals>
				<property>controls/armament/station[0]/release-stick</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>

  <animation>
    <type>translate</type>
		  <object-name>9M120-missile</object-name>
    	<property>controls/armament/trigger-9m-1</property>
    	<axis>
      		<x>-1</x>
      		<y>0</y>
      		<z>0</z>
    	</axis>
      <interpolation>
		    <entry>
		      <ind> 0.0</ind>
		      <dep> 0.0</dep>
		    </entry>
		    <entry>
		      <ind> 1.0</ind>
		      <dep> 2.3</dep>
		    </entry>
	    </interpolation>
  </animation>

</PropertyList>
