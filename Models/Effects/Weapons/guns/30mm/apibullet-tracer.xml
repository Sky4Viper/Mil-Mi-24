<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>apibullet-tracer.ac</path>

  <animation>
    <object-name>trace</object-name>
  </animation>

  <model>
    <name>smoke</name>
    <path>apibullet-smoke.xml</path>
    <offsets>
      <x-m>  7.00000 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.0 </z-m> <!-- -1.43238 -->
      <heading-deg>180</heading-deg>
      <!-- <pitch-deg>15</pitch-deg> -->
    </offsets>
  </model>

  <animation>
    <type>noshadow</type>
    <object-name>trace</object-name>
    <object-name>smoke</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>trace</object-name>
    <object-name>smoke</object-name>
  </effect>

  <animation>
    <type>dist-scale</type>
    <object-name>trace</object-name>
    <interpolation>
      <entry><ind>    0 </ind><dep>  0.05 </dep></entry>
      <entry><ind>   10 </ind><dep>  0.20 </dep></entry>
      <entry><ind>  400 </ind><dep> 10.00 </dep></entry>
      <entry><ind> 5000 </ind><dep>  0.00 </dep></entry>
    </interpolation>
  </animation>

  <animation>
    <type>material</type>
    <object-name>trace</object-name>
    <emission>
      <factor> 1 </factor>
      <offset> 1 </offset>
      <red>    0.75 </red>
      <green>  0.25 </green>
      <blue>   0.25 </blue>
    </emission>
  </animation>

  <animation>
    <object-name>trace</object-name>
  </animation>

  <animation>
		<type>rotate</type>
		<object-name>trace</object-name>
		<property>/velocities/airspeed-kt</property>
		<factor>-0.001</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>
