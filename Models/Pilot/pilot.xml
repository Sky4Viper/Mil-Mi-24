<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>pilot.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>pilot_body</object-name>
    <object-name>pilot_hands</object-name>
    <object-name>pilot_boots</object-name>
    <object-name>pilot_head</object-name>
    <object-name>pilot_neck</object-name>
    <object-name>pilot_helmet</object-name>
    <object-name>kit</object-name>
    <object-name>pilot_belts</object-name>
    <object-name>kit_belts</object-name>
    <object-name>pilot_eyes</object-name>

    <!-- Objets transparents -->
    <object-name>pilot_visor</object-name>
  </animation>

  <!-- <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>pilot_visor</object-name>
  </effect> -->

  <animation>
    <type>noshadow</type>
    <object-name>pilot_visor</object-name>
  </animation>

  <animation>
    <name>AnimeHead</name>
    <object-name>pilot_visor</object-name>
    <object-name>pilot_head</object-name>
    <object-name>pilot_neck</object-name>
    <object-name>pilot_helmet</object-name>
    <object-name>pilot_eyes</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pilot_visor</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> 45 </factor>
    <center>
      <x-m> 0.01303 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 0.64337 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AnimeHead</object-name>
    <property>controls/flight/elevator</property>
    <factor> -15 </factor>
    <center>
      <x-m> 0.067 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.488 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AnimeHead</object-name>
    <property>controls/flight/rudder</property>
    <factor> -25 </factor>
    <center>
      <x-m> 0.067 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.488 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AnimeHead</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> -10 </factor>
    <center>
      <x-m> 0.067 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.488 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
