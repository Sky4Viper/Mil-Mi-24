<PropertyList>

  <path>mainrotor.ac</path>

  <animation>
    <object-name>rotor</object-name>
  </animation>

  <!-- Blades -->
  <model>
    <name>Blade1</name>
    <path>Aircraft/Mil-Mi-24/Models/MainRotor/blade1.xml</path>
  </model>

  <model>
    <name>Blade2</name>
    <path>Aircraft/Mil-Mi-24/Models/MainRotor/blade2.xml</path>
    <offsets>
      <heading-deg> 72 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade3</name>
    <path>Aircraft/Mil-Mi-24/Models/MainRotor/blade3.xml</path>
    <offsets>
      <heading-deg> 144 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade4</name>
    <path>Aircraft/Mil-Mi-24/Models/MainRotor/blade4.xml</path>
    <offsets>
      <heading-deg> 216 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade5</name>
    <path>Aircraft/Mil-Mi-24/Models/MainRotor/blade5.xml</path>
    <offsets>
      <heading-deg> 288 </heading-deg>
    </offsets>
  </model>

  <animation>
    <name>touteslespales</name>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>
    <object-name>Blade3</object-name>
    <object-name>Blade4</object-name>
    <object-name>Blade5</object-name>
  </animation>

