<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <keyboard>

    <!-- ###### -->

    <key n="60">
        		<name>&lt;</name>
        		<desc>Select Gun</desc>
        		<!-- <binding>
					    <command>property-assign</command>
					    <property>controls/armament/weapon-type</property>
              <value>1</value>
				    </binding> -->
            <binding>
            	<command>nasal</command>
            	<script><![CDATA[
                		setprop("controls/armament/weapon-type", 1);
                    #setprop("sim/messages/copilot", "Guns");
                		screen.log.write("GSh-30-2K cannon selected", 0.5, 0.5, 1);
                		]]>
				      </script>
        	  </binding>
    </key>

    <key n="62">
        		<name>&gt;</name>
        		<desc>Select Rockets</desc>
        		<!-- <binding>
					    <command>property-assign</command>
					    <property>controls/armament/weapon-type</property>
              <value>2</value>
				    </binding> -->
            <binding>
            	<command>nasal</command>
            	<script><![CDATA[
                		setprop("controls/armament/weapon-type", 2);
                    #setprop("sim/messages/copilot", "Rockets");
                		screen.log.write("S-8 rockets selected", 0.5, 0.5, 1);
                		]]>
				      </script>
        	  </binding>
    </key>

    <key n="100">
				<name>d</name>
				<desc>Fire selected weapons</desc>
				<binding>
					<command>property-assign</command>
					<property>controls/armament/trigger</property>
					<value>true</value>
				</binding>
			  <mod-up>
				  <binding>
					  <command>property-assign</command>
					  <property>controls/armament/trigger</property>
					  <value>false</value>
				  </binding>
			  </mod-up>
		</key>

