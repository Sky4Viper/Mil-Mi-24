<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="views.xml">

    <fuel-fraction>1</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Mil-Mi-24/mi24-splash.png</splash-texture>
    </startup>

    <sound>
      <path>Aircraft/Mil-Mi-24/Sounds/mi24-sound.xml</path>
    </sound>

    <model>
      <path             archive="y">Aircraft/Mil-Mi-24/Models/mi24.xml</path>
      <livery>
        <file           type="string"></file>
      </livery>
      <mi24>
        <state          type="int">0</state>
        <engine         type="float">0</engine>
        <rotor-step-deg type="float">-1</rotor-step-deg>
        <effects>
          <particles>
            <rotorwash>
              <enabled            type="bool">true</enabled>
              <redcombinedstart   type="float">0.3</redcombinedstart>
              <greencombinedstart type="float">0.3</greencombinedstart>
              <bluecombinedstart  type="float">.3</bluecombinedstart>
              <redcombinedend     type="float">0.5</redcombinedend>
              <greencombinedend   type="float">0.5</greencombinedend>
              <bluecombinedend    type="float">0.5</bluecombinedend>
            </rotorwash>
            <enabled       type="bool">true</enabled>
            <redcombined   type="float">0</redcombined>
            <greencombined type="float">0</greencombined>
            <bluecombined  type="float">0</bluecombined>
          </particles>
        </effects>
      </mi24>
      <turret n="0">
        <heading>0</heading>
        <pitch>0</pitch>
      </turret>
    </model>

   <!-- <instrumentation include="instrumentation.xml"/> -->

    <instrumentation>
      <path>Aircraft/Mil-Mi-24/Systems/instrumentation.xml</path>

      <gsdi>
        <serviceable type="bool">true</serviceable>
        <enabled type="bool">true</enabled>
      </gsdi>

    </instrumentation>



    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int    n="0"  type="int">0</int>
        <int    n="1"  type="int">0</int>
        <int    n="2"  type="int">0</int>
        <int    n="3"  type="int">0</int>
        <int    n="4"  type="int">0</int>
        <int    n="5"  type="int">0</int>
        <int    n="6"  type="bool" alias="controls/smoke">0</int>
        <int    n="7"  type="int">0</int>
        <float  n="0"  alias="/sim/model/door-positions/crew/position-norm"/>
        <float  n="1"  alias="/sim/model/door-positions/passenger/position-norm"/>
        <float  n="2"  alias="/position/gear-agl-m">0</float>
        <float  n="3"  alias="/position/altitude-ft">0</float>
        <float  n="4"  alias="/rotors/main/rpm"/>
        <float  n="5"  alias="/sim/model/mi24/state"/>
        <float  n="6"  alias="/gear/gear[0]/wow/"/>
        <float  n="7"  alias="/gear/gear[1]/wow/"/>
        <float  n="8"  alias="/gear/gear[2]/wow/"/>
        <float  n="9"  alias="/gear/gear[0]/rollspeed-ms"/>
        <float  n="10" alias="/gear/gear[1]/rollspeed-ms"/>
        <float  n="11" alias="/gear/gear[2]/rollspeed-ms"/>
        <float  n="12" alias="/orientation/pitch-deg"/>
        <float  n="13" alias="/orientation/roll-deg"/>
        <float  n="14" alias="/rotors/main/blade[0]/position-deg"/>
        <!-- For Bombable -->
        <int    n="10" type="int" alias="controls/armament/trigger">0</int>
        <string n="9"  type="string" />
      </generic>
    </multiplay>

    <weight n="0">
      <name>Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="1">
      <name>Co-Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="2">
      <name>Right Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="3">
      <name>Load</name>
      <weight-lb>0</weight-lb>
      <max-lb>20000</max-lb>
    </weight>

    <hud include="hud.xml"/>

    <help include="help.xml"/>

    <instrumentation>
      <path>Aircraft/Mil-Mi-24/Systems/instrumentation.xml</path>

      <gsdi>
        <serviceable type="bool">true</serviceable>
        <enabled type="bool">true</enabled>
      </gsdi>

    </instrumentation>

    <menubar include="../Dialogs/mi24-menu.xml"/>

  </sim>

  <controls include="controls.xml"/>

  <instrumentation include="instrumentation2.xml"/>

  <input include="mi24-keyboard.xml"/>

  <rotors include="rotors.xml"/>

  <nasal>
    <hdr>
     <file>Aircraft/Mil-Mi-24/Nasal/hdr.nas</file>
    </hdr>
    <doors>
      <file>Aircraft/Mil-Mi-24/Nasal/doors.nas</file>
    </doors>
    <mi24>
      <file>Aircraft/Mil-Mi-24/Nasal/light.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/mi24.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/liveries.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/map.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/Electrical.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/convert.nas</file>
    </mi24>
    <gmeter>
      <file>Aircraft/Mil-Mi-24/Nasal/gmeter.nas</file>
    </gmeter>
    <!-- ########### -->
    <turrets>
      <file>Aircraft/Mil-Mi-24/Nasal/turrets.nas</file>
    </turrets>
    <guns>
      <file>Aircraft/Mil-Mi-24/Nasal/weapons.nas</file>
    </guns>
    <tracking>
      <file>Aircraft/Mil-Mi-24/Nasal/tracking.nas</file>
    </tracking>
    <!-- <launchauthorizer>
      <file>Aircraft/Mil-Mi-24/Nasal/launchauthorizer.nas</file>
    </launchauthorizer> -->
    <raduga-sh>
      <file>Aircraft/Mil-Mi-24/Nasal/raduga-sh.nas</file>
    </raduga-sh>
    <rockets>
      <file>Aircraft/Mil-Mi-24/Nasal/rockets.nas</file>
    </rockets>
    <hud>
			<file>Aircraft/Mil-Mi-24/Nasal/hud.nas</file>
		</hud>
    <!-- ########### -->
  </nasal>

</PropertyList>
