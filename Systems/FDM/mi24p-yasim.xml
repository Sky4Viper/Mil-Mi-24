  <!-- Tail -->
  <fuselage ax="-0.771" ay="0" az="-0.953" bx="-1.514" by="0" bz="-0.657" width="2.037" taper="0.54" midpoint="0.0"
  cx="1.45" cy=" 1.450" idrag="0"/>

  <fuselage ax="-1.514" ay="0" az="-0.657" bx="-7.409" by="0" bz="-0.043" width="1.103" taper="0.10" midpoint="0.0"
  cx="1" idrag=" 0.000"/>

  <cockpit x="5.814" y="0.0" z="-0.436"/>

  <vstab x="-6.753" y="0" z="-0.472"
         chord="1.6"
         length="2.4"
         taper=".62"
         effectiveness="2.0"
         sweep="40"
         incidence="0">
         <stall aoa="16" width="4" peak="1.5"/>
  </vstab>

  <hstab x="1.244" y="0.894" z="-0.468"
         chord="1.369"
         length="2.846"
         taper=".45"
         effectiveness="0.56"
         sweep="2"
         dihedral="-12"
         incidence="15">
         <stall aoa="0" width="0" peak="1.5"/>
  </hstab>

  <mstab x="-6.199" y="0.223" z="-0.075"
         chord="0.876"
         length="1.693"
         taper="0.54"
         effectiveness="1.0"
         sweep="0"
         incidence="0">
         <stall aoa="0" width="0" peak="1.5"/>
  </mstab>

  <!--guns recoil in 5000 Lbf = 2.5Tf negative angle of the gun : -2'-->
  <thruster thrust="5000"
            x="5.32" y="-0.74" z="-1.75"
            vx="-0.999390827" vy="-0.001" vz="0.03489949">
            <control-input control="THROTTLE" axis="controls/armament/trigger-mg"/>
  </thruster>

  <!-- noze gear -->
  <gear x="5.538" y="0" z="-2.92836"
        compression="0.14"
        spring="4.0"
        damp="0.9"
        sfric="0.8"
        dfric="0.7"
        stiction="0">
        
        <control-input  control="STEER"  axis="/controls/flight/rudder" square="true" src0="-1" dst0="-1.0" src1="1" dst1="1.0"/>
        <control-input  control="EXTEND" axis="/controls/gear/gear-down"/>

        <control-output control="STEER"  prop="controls/gear/steering"/>
        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>

        <control-speed  control="EXTEND" transition-time="7"/>
  </gear>

  <!-- left gear -->
  <gear x="0.744" y="1.643" z="-2.8704"
        compression="0.11"
        spring="4.21"
        damp="1.0"
        sfric="1.5"
        dfric="0.8"
        initial-load="1"
        stiction="1">
        <control-input  control="BRAKE"  axis="/controls/gear/brake-left"/>
        <control-input  control="BRAKE"  axis="/controls/gear/brake-parking"/>
        <control-input  control="EXTEND" axis="/controls/gear/gear-down"/>

        <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>

        <control-speed  control="EXTEND" transition-time="7"/>
  </gear>

  <!-- right gear -->
  <gear x="0.744" y="-1.643" z="-2.8704"
        compression="0.11"
        spring="4.21"
        damp="1.0"
        sfric="1.5"
        dfric="0.8"
        initial-load="1"
        stiction="1">
        <control-input  control="BRAKE"  axis="/controls/gear/brake-right"/>
        <control-input  control="BRAKE"  axis="/controls/gear/brake-parking"/>
        <control-input  control="EXTEND" axis="/controls/gear/gear-down"/>

        <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>

        <control-speed  control="EXTEND" transition-time="7"/>
  </gear>

  <!-- Tail skid
  <gear x="-14" y="0" z="1.21"
        skid="1"
        compression="0.01"
        spring="0.1"
        sfric="1"
        dfric="1">
  </gear> -->

  <!-- Tail skid-->
  <gear x="-6.953" y="0" z="-1.194"
        skid="1"
        compression="0.01"
        spring="0.1"
        sfric="1"
        dfric="1">
  </gear>

  <tank x=" 2.6" y=" 0.7" z="-0.31" capacity="1351"/>
  <tank x="-2.6" y="-0.7" z="-0.31" capacity=" 734"/>
  <tank x=" 2.6" y=" 0.0" z="-0.31" capacity=" 851"/>
  <tank x="-2.6" y=" 0.0" z="-0.31" capacity=" 904"/>

