<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <default>
    <menu n="10">
      <label>Mil Mi 24</label>
      <enabled type="bool">true</enabled>
      <item>
        <label>AutoStart/AutoStop</label>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/battery-switch</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/electric/engine/generator</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/instrument-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/nav-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/beacon</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/lighting/strobe</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/switches/starterkey-insert</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/engines/engine[0]/fuel-pump</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>controls/engines/engine[1]/fuel-pump</property>
        </binding>
        <binding>
          <condition>
            <property>controls/electric/battery-switch</property>
          </condition>
          <command>nasal</command>
          <script>mi24.engines(1)</script>
        </binding>
        <binding>
          <condition>
            <not><property>controls/electric/battery-switch</property></not>
          </condition>
          <command>nasal</command>
          <script>mi24.engines(0)</script>
        </binding>
      </item>
      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>
      <item>
       <label>Reload S-8 rockets</label>
       <binding>
         <command>nasal</command>
         <script>rockets.reload()</script>
       </binding>
      </item>
      <item>
       <label>Reload Ataka missiles</label>
       <binding>
         <command>nasal</command>
         <script>guns.reload()</script>
       </binding>
      </item>
      <item>
        <label>Exaust IR coolers (toggle)</label>
        <binding>
          <command>property-toggle</command>
          <property>sim/model/mi24/ir-cooler</property>
        </binding>
      </item>
      <item>
        <label>HUD Extra Info (toggle)</label>
        <binding>
          <command>property-toggle</command>
          <property>sim/model/mi24/hud-extra-info</property>
        </binding>
      </item>
      
    </menu>
  </default>

</PropertyList>
